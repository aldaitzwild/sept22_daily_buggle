{% extends 'layout.html.twig' %}

{% block javascript %}
    <script src="assets/js/script.js"></script>
{% endblock %}

{% block content %}
   <header class="container">
        <h1 class="text-center">
            <img src="/assets/images/daily_buggle_logo.png" />
        </h1>
   </header>

   <main>
        <div class="container col-xxl-8 px-4 py-5">
            <div class="row flex-lg-row-reverse align-items-center g-5 py-5" id="headline">
                <div class="col-10 col-sm-8 col-lg-6">
                    <img id="headlinePicture" src="/assets/images/article_1.jpg" class="d-block mx-lg-auto img-fluid" alt="Bootstrap Themes" width="700" height="500" loading="lazy">
                </div>
                <div class="col-lg-6">
                    <h1 class="display-5 fw-bold lh-1 mb-3" id="headlineTitle"></h1>
                    <p class="lead" id="headlineContent"></p>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                        <button id="changeHeadlineButton" type="button" class="btn btn-primary btn-lg px-4 me-md-2">Change the headline</button>
                        <button id="searchHeadlineButton" type="button" class="btn btn-outline-secondary btn-lg px-4" data-bs-toggle="offcanvas" data-bs-target="#searchMenu">Search for a specific headline</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="offcanvas offcanvas-start" tabindex="-1" id="searchMenu" aria-labelledby="searchMenuLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="searchMenuLabel">Type your search : </h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <input class="form-control" id="searchHeadline"/>

                <ul id="resultList"></ul>
            </div>
        </div>
   </main>
{% endblock %}
